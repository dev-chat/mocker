{
  "name": "mock",
  "version": "1.0.0",
  "description": "Mock your friends",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:prod": "tsc -p tsconfig.prod.json",
    "format:check": "pretty-quick --staged",
    "format:check:all": "prettier --check 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "eslint '*/**/*.{js,ts}' --quiet --fix",
    "start": "npm run start:dev",
    "start:prod": "node dist/index.js",
    "start:dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "test": "jest --silent",
    "test:watch": "jest --watch",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/web-api": "^7.0.2",
    "axios": "^1.6.7",
    "body-parser": "^1.20.2",
    "easy-table": "^1.2.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "moment": "^2.30.1",
    "mysql": "^2.18.1",
    "openai": "^4.28.0",
    "sentiment": "^5.0.2",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/easy-table": "0.0.33",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jest-when": "^3.5.5",
    "@types/lolex": "^5.1.6",
    "@types/node": "^20.11.20",
    "@types/sentiment": "^5.0.4",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-when": "^3.6.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}

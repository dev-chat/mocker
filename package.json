{
  "name": "mocker",
  "version": "1.0.0",
  "description": "Mock your friends - Monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:backend": "npm run build -w @mocker/backend",
    "build:frontend": "npm run build -w @mocker/frontend",
    "build:prod": "npm run build:prod --workspaces --if-present",
    "build:prod:backend": "npm run build:prod -w @mocker/backend",
    "start": "npm run start -w @mocker/backend",
    "start:prod": "npm run start:prod -w @mocker/backend",
    "dev:frontend": "npm run dev -w @mocker/frontend",
    "preview:frontend": "npm run preview -w @mocker/frontend",
    "test": "npm run test --workspaces --if-present",
    "test:backend": "npm run test -w @mocker/backend",
    "lint": "eslint 'packages/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint 'packages/**/*.{js,ts,tsx}' --quiet --fix",
    "format:check": "prettier --check 'packages/**/*.{ts,tsx}'",
    "format:fix": "prettier --write 'packages/**/*.{ts,tsx}'"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^3.2.2",
    "typescript": "^5.3.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run lint",
      "git add"
    ]
  }
}
